
@{
    ViewBag.Title = "Feedback";
}

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <div class="jumbotron text-center">
            <h1>@ViewBag.Title</h1>
        </div>


        <div class="container">

            <div class="form-group">
                <form action="~/Home/_Action_FeedBack" method="post">
                    <label>Name: </label><input type="text" name="Name" value="" class="form-control" placeholder="enter name..." />
                    <label>Date: </label><input type="date" name="Date" value="" class="form-control" placeholder="enter date..." />
                    <label>Message: </label><input type="text" name="Msg" value="" class="form-control" placeholder="enter message..." />
                                            <br />
                                            <button type="submit" class="btn btn-primary ">Send</button>

                </form>
            </div>
        </div>

        <div class="div_main">
        </div>
        <div class="card-footer text-center">
            <footer>
                <p>Copyright @DateTime.Now.Year</p>
            </footer>
        </div>
    </body>
    </html>

